@model CrudOperationCore.ViewModel.UserViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User Detail </h4>
    <hr />
    <dt class="col-sm-2">
        @Html.DisplayName("User Profile")
    </dt>
    <div class="form-group">
        <img src="~/Images/@Model.ProfileImagePath" class="rounded-circle" height="150" width="150" asp-append-version="true" style="box-shadow: 0px 0px 13px 3px rgba(0, 0, 0, 0.2)" id="ImagePreview">
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FatherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FatherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ContactNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResidentailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResidentailAddress)
        </dd>


    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.UserId }) |
